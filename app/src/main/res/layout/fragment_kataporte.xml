<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#E94656">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:cardElevation="4sp"
        app:cardBackgroundColor="@color/white">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="8sp">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/text_desc_cupon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12sp"
                android:textAlignment="center"
                android:textSize="18sp"
                android:fontFamily="sans-serif-black"
                android:text="Francisco Javier GarduÃ±o Juan"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <com.google.android.material.imageview.ShapeableImageView
                android:adjustViewBounds="true"
                android:id="@+id/cupon_qr"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12sp"
                android:src="@drawable/qr_example"
                app:layout_constraintTop_toBottomOf="@id/text_desc_cupon"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintWidth_percent="0.55"/>

            <com.google.android.material.imageview.ShapeableImageView
                android:adjustViewBounds="true"
                android:id="@+id/tato"
                android:layout_width="wrap_content"
                android:layout_height="0sp"
                android:layout_marginTop="12sp"
                android:src="@drawable/tato_step"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@id/text_cupon"
                app:layout_constraintHorizontal_bias="0.95"
                app:layout_constraintHeight_percent="0.35"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/text_cupon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="12sp"
                android:textAlignment="center"
                android:fontFamily="sans-serif"
                android:textSize="24sp"
                android:text="1234-5678-9012"
                app:layout_constraintTop_toBottomOf="@id/cupon_qr"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>