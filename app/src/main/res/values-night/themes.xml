<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.KataplumApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <item name="colorPrimary">@color/primary_light_color</item>
        <item name="colorPrimaryVariant">@color/primary_light_secondary_color</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>

    <style name="Theme.App.Splash" parent="Base.Theme.KataplumApp">
        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>
        <item name="postSplashScreenTheme">@style/Theme.KataplumApp</item>
    </style>

    <style name="Theme.KataplumApp" parent="Base.Theme.KataplumApp" />
</resources>